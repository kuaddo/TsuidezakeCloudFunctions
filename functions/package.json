    "npm-check-updates": "^11.5.11",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "copyfiles": "^2.4.1",
    "firebase-functions-test": "^0.2.3",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
